<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
</head>
<body>
    <h1><%= heading %></h1>
    <p><%= message %></p>
    <% if (items && items.length > 0) { %>
    <ul>
        <% items.forEach(function(item) { %>
        <li><%= item %></li>
        <% }); %>
    </ul>
    <% } %>
</body>
</html>
